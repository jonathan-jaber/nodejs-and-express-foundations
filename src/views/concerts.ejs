<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Linkin Park Tickets</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <div class="container">
    <header class="header">
    <div class="logo">
        <img src="/img/globe_logo.png" alt="Globe Logo" class="globe-logo" />
        <span class="logo-text">GloboTicket</span>
    </div>
    <div class="header-cart">
        <img src="/img/cart.svg" alt="Cart" />
        <p><span id="cartCount"><%= cartCount %></span> tickets</p>
    </div>
    </header>

    <h1 class="tour-title">From Zero West Coast Tour 2025</h1>

    <img class="hero" src="/img/linkin_park.jpg" alt="Linkin Park" />

    <h2>Band Members</h2>
    <ul>
      <% members.forEach(m => { %>
        <li><strong><%= m.name %></strong> â€” <%= m.role %></li>
      <% }) %>
    </ul>

    <h2>Upcoming Concerts</h2>
    <table>
      <thead><tr><th>City</th><th>Venue</th><th>Date</th><th>Price</th></tr></thead>
      <tbody>
        <% shows.forEach(s => { %>
          <tr>
            <td><%= s.city %></td>
            <td><%= s.venue %></td>
            <td><%= s.date %></td>
            <td>$<%= s.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>